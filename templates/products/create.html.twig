{% extends 'baseAdmin.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="nameProduct">Name:</label>
        {{ form_widget(form.nameProduct,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Name Product' 
            }
        }) }}

    </div>

    <div class="form-group">
        <label for="quantityProduct">Quantity:</label>
        {{ form_widget(form.quantityProduct,{
            'attr':{
                'class':'form-control',
            }
        }) }}
    </div>
        <div class="form-group">
        <label for="priceProduct">price:</label>
        {{ form_widget(form.priceProduct,{
            'attr':{
                'class':'form-control',
            }
        }) }}
    </div>
        </div>
        <div class="form-group">
        <label for="informationProduct">information:</label>
        {{ form_widget(form.informationProduct,{
            'attr':{
                'class':'form-control',
            }
        }) }}
    </div>
            <div class="form-group">
        <label for="imageProduct">imageProduct:</label>
        {{ form_widget(form.imageProduct,{
            'attr':{
                'class':'form-control',
            }
        }) }}
    </div>

    <input type="submit" name="create_todo" value="Create" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}