{% extends 'baseAdmin.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="nameProduct">Name:</label>
        {{ form_widget(form.nameProduct,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Name Product'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="quantityProduct">Quantity:</label>
        {{ form_widget(form.quantityProduct,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Quantity product'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="priceProduct">Price:</label>
        {{ form_widget(form.priceProduct,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Price'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="informationProduct">Information:</label>
        {{ form_widget(form.informationProduct,{
            'attr':{
                'class':'form-control'
            }
        }) }}
    </div>

    <input type="submit" name="product_edit" value="Edit" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}
