{% extends 'base.html.twig' %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Price Total</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <th scope="row">{{ order.id }}</th>
                    <td>{{ order.dateOrder }}</td>
                    <td>{{ order.priceOrder }}</td>
                    <td>
                        <a href="{{ path('orderDetails_user', {'id': order.id}) }}" class='btn btn-success'>View</a>
                        <a href="{{ path('order_delete', {'idOrder': order.id}) }}" class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}